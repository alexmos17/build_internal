{
  "comment": ["This is a configuration file for gatekeeper_ng.py",
              "Look at that for documentation on this file's format."],

  "masters": {
    "http://build.chromium.org/p/chromium": [
      {
        "categories": [
          "gclient"
        ],

        "sheriff_classes": [
          "sheriff"
        ],

        "builders": {
          "Win": {
            "categories": [
              "chromium_archive_build",
              "chromium_checkdeps2git",
              "chromium_compile",
              "chromium_crash_handler",
              "chromium_sizes",
              "chromium_windows"
            ]
          },
          "Win Split": {
            "categories": [
              "chromium_compile",
              "chromium_crash_handler",
              "chromium_windows"
            ]
          },
          "Mac": {
            "categories": [
              "chromium_archive_build",
              "chromium_checkdeps2git",
              "chromium_compile",
              "chromium_sizes"
            ]
          },
          "Linux": {
            "categories": [
              "chromium_checkdeps2git",
              "chromium_compile",
              "chromium_archive_build",
              "chromium_sizes"
            ]
          },
          "Linux x64": {
            "categories": [
              "chromium_checkdeps2git",
              "chromium_compile",
              "chromium_archive_build",
              "chromium_sizes"
            ]
          },
          "Android": {
            "comment": ["Android slave_steps aren't enabled in",
                        "master_full_cfg.py."]
          }
        }
      }
    ]
  },

  "categories": {
    "gclient": {
      "closing_steps": [
        "runhooks"
      ],
      "forgiving_steps": [
        "gclient_revert",
        "update",
        "update_scripts"
      ]
    },

    "chromium_sizes": {
      "closing_steps": [
        "sizes"
      ]
    },

    "chromium_crash_handler": {
      "forgiving_steps": [
        "start_crash_handler"
      ]
    },

    "chromium_windows": {
      "forgiving_steps": [
        "svnkill",
        "taskkill"
      ]
    },

    "chromium_checkdeps2git": {
      "closing_steps": [
        "check_deps2git"
      ]
    },

    "chromium_compile": {
      "closing_steps": [
        "compile"
      ]
    },

    "chromium_archive_build": {
      "forgiving_steps": [
        "archive_build"
      ]
    }
  }
}
